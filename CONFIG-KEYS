		  bgp_table_dump_kafka_partition_key |
                  bmp_daemon_msglog_kafka_partition_key | bmp_dump_kafka_partition_key |
                  sfacctd_counter_kafka_partition_key |
		  telemetry_daemon_msglog_kafka_partition_key |
